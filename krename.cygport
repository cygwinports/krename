inherit kde4

NAME="krename"
VERSION=4.0.9
RELEASE=7
CATEGORY="Utils"
SUMMARY="KDE batch file renamer"
DESCRIPTION="KRename is a powerful batch renamer for KDE. It allows you to
easily rename hundreds or even more files in one go. The filenames can be
created by parts of the original filename, numbering the files or accessing
hundreds of informations about the file, like creation date or Exif
informations of an image."
HOMEPAGE="http://www.krename.net/"
SRC_URI="mirror://sourceforge/krename/${NAME}-${VERSION}.tar.bz2"
PATCH_URI="
	http://pkgs.fedoraproject.org/cgit/krename.git/plain/krename-4.0.9-fix-findlibpodofo.patch
	http://pkgs.fedoraproject.org/cgit/krename.git/plain/krename-4.0.9-fix-freetype-includes.patch
	4.0.0-gcc43.patch
"

DIFF_EXCLUDES="*.po"
